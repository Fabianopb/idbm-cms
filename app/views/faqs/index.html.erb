<% if can? :manage, Faq %>
  <div class="top-buttons">
      <%= link_to raw("<button type='button' class='btn btn-default'><span class='glyphicon glyphicon-plus' aria-hidden='true'></span> New</button>"), :action => 'new' %>
  </div>
<% end %>

<h3>FAQs</h3>

<%= 'No Q&A items found! Add the first one using the "New" button.' if @faqs.size == 0 %>

<% @faqs.each do |faq| %>
  <div class="panel panel-info">
    <div class="panel-heading">
      <h2 class="panel-title"><%= faq.question %></h2>
    </div>
    <div class="panel-body"><%= faq.answer %></div>
    <% if can? :manage, Faq %>
      <div class="panel-footer">
        <%= link_to "<span class='glyphicon glyphicon-pencil standard-actions' aria-hidden='true'></span>".html_safe, {:action => 'edit', :id => faq.id} %>
        <%= link_to "<span class='glyphicon glyphicon-remove standard-actions' aria-hidden='true'></span>".html_safe, {:action => 'delete', :id => faq.id} %>
      </div>
    <% end %>
  </div>
<% end %>