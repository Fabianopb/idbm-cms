<!DOCTYPE html>
<html>
<head>
  <title>IDBM Industry Project</title>
  <%= stylesheet_link_tag    'screen', media: 'all' %>
  <%= javascript_include_tag 'effects' %>
  <%= csrf_meta_tags %>
</head>
<body>
  
  <div id="page">
    
    <header>
      <h1>IDBM Industry Project</h1>
      <div class="access">
        <p>
          Welcome<%= session[:user_id] ? " #{session[:name]} | " : ", please log in." %>
          <%= link_to 'log out', :controller => 'access', :action => 'logout' if session[:user_id]  %>
        </p>
      </div>
    </header>
    <% if session[:user_id] %>
    <nav>
      <ul>
        <li><%= link_to 'main', :controller => 'main' %></li>
        <li><%= link_to 'travel plans', :controller => "travel_plans" %></li>
        <li><%= link_to 'refund claims', :controller => "refund_claims" %></li>
        <li><%= link_to 'personal info', :controller => "accounts" %></li>
        <li><%= link_to 'FAQ', :controller => "fa_qs" %></li>
        <li><%= link_to 'users', :controller => "users" %></li>
      </ul>
    </nav>
    <% end %>
    
    <section class="main_section">
      ---
      
      <%= yield %>
      
      ---
    </section>
    
    <footer>
      <p>&copy; IDBM 2016</p>
    </footer>

  </div>

</body>
</html>
