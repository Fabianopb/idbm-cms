<div class="top-buttons">
    <%= link_to raw("<button type='button' class='btn btn-primary'><span class='glyphicon glyphicon-arrow-left' aria-hidden='true'></span> Back</button>"), {:action => 'index', :id => @user.id} %>
</div>

<h3>Delete User</h3>

<%= form_for :user, :url => {:action => 'destroy', :id => @user.id} do |f| %>

    <p>Are you sure you want to permanently delete this user? This action can't be undone!</p>

    <p class="reference-name">User: <%= @user.name %></p>

    <div class="form-buttons confirm-buttons">
      <%= f.button "<span class='glyphicon glyphicon-remove' aria-hidden='true'></span> Delete".html_safe, :class => 'btn btn-danger' %>
    </div>

  <% end %>