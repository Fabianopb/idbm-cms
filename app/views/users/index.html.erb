<p id="notice"><%= notice %></p>

<h1>Listing Users</h1>
<%= %>
<%= link_to 'New User', :action => 'new' %>

<table>
  <thead>
    <tr>
      <th>Role</th>
      <th>Name</th>
      <th>Username</th>
      <th>e-mail</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.role %></td>
        <td><%= user.name %></td>
        <td><%= user.username %></td>
        <td><%= user.e_mail %></td>
        <td>
          <%= link_to 'Show', :action => 'show', :id => user.id %>
          <%= link_to 'Edit', :action => 'edit', :id => user.id %>
          <%= link_to 'Delete', :action => 'delete', :id => user.id %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
