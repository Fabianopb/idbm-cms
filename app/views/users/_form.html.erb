<table summary="User form fields">
  <tr>
    <th><%= f.label :first_name, "First Name" %></th>
    <td><%= f.text_field :first_name %></td>
  </tr>
  <tr>
    <th><%= f.label :last_name, "Last Name" %></th>
    <td><%= f.text_field :last_name %></td>
  </tr>
  <tr>
    <th><%= f.label :username, "Username" %></th>
    <td><%= f.text_field :username %></td>
  </tr>
  <tr>
    <th><%= f.label :e_mail, "e-mail" %></th>
    <td><%= f.text_field :e_mail %></td>
  </tr>
  <tr>
    <th><%= f.label :password, "Password" %></th>
    <td><%= f.password_field :password %></td>
  </tr>
  <tr>
    <th><%= f.label :password_confirmation, "Password confirmation" %></th>
    <td><%= f.password_field :password_confirmation %></td>
  </tr>
  <% if (@user.id != current_user.id) && (can? :manage, User) %>
  <tr>
    <th><%= f.label :role, "Role" %></th>
    <td>
      <%= f.radio_button(:role, "Admin") %> Admin
      <%= f.radio_button(:role, "Student") %> Student
    </td>
  </tr>
  <% end %>
</table>

