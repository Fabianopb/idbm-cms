<div class="row">
  <div class="col-sm-6 form-group">
    <%= f.label :first_name, :class => 'mandatory' %>
    <%= f.text_field :first_name, :class => 'form-control' %>
  </div>
</div>

<div class="row">
  <div class="col-sm-6 form-group">
    <%= f.label :last_name, :class => 'mandatory' %>
    <%= f.text_field :last_name, :class => 'form-control' %>
  </div>
</div>

<% if can? :edit, @user %>
  <div class="row">
    <div class="col-sm-6 form-group">
      <%= f.label :username, :class => 'mandatory' %>
      <%= f.text_field :username, :class => 'form-control' %>
    </div>
  </div>
<% end %>

<div class="row">
  <div class="col-sm-6 form-group">
    <%= f.label :email, :class => 'mandatory' %>
    <%= f.text_field :email, :class => 'form-control' %>
  </div>
</div>

<% if current_user.SUDO? %>
  <div class="row">
    <div class="col-sm-6 form-group boxes">
      <%= f.label :role %>
      <div class="boxes"><%= f.radio_button(:role, 'Student') %> Student</div>
      <div class="boxes"><%= f.radio_button(:role, 'Admin') %> Admin</div>
    </div>
  </div>
<% end %>
