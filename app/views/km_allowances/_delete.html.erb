<div class="modal fade" id="deleteKmAllowance<%= km_allowance.id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <%= form_for :km_allowance, :url => {:controller => 'km_allowances', :action => 'destroy', :id => km_allowance.id} do |f| %>
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title" id="myModalLabel">Warning!</h4>
        </div>
        <div class="modal-body">        
            <p class="reference-name">Delete km allowance of <%= km_allowance.kms %> kms and route "<%= km_allowance.route %>"?</p>
            This will permanently destroy this item!
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
          <%= f.button "<span class='glyphicon glyphicon-remove' aria-hidden='true'></span> Delete".html_safe, :class => 'btn btn-danger' %>
        </div>
      <% end %>
    </div>
  </div>
</div>