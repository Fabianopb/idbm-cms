<h1>Delete km allowance</h1>

<%= link_to 'Back to claims', {:controller => 'refund_claims', :action => 'show', :user_id => @user.id, :id => @refund_claim.id} %>

<%= form_for :km_allowance, :url => {:action => 'destroy', :user_id => @user.id, :refund_claim_id => @refund_claim.id, :id => @km_allowance.id} do |f| %>

    <p>Are you sure you want to permanently delete this km allowance?</p>

    <p class="reference-name"><%= @km_allowance.route %> (<%= @km_allowance.kms %>)</p>

    <div class="form-buttons">
      <%= submit_tag("Detele km allowance") %>
    </div>

<% end %>