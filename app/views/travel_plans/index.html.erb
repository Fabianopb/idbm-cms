<p id="notice"><%= notice %></p>

<h4>Travel Plans</h4>

<%= (link_to 'New Travel Plan', :action => 'new', :user_id => @user.id) if can? :new, TravelPlan %>

<div class="row">
  <% @travel_plans.each do |travel_plan| %>
  <div class="col s12 m4">
    <div class="card grey lighten-5">
      <div class="card-content">
        <span class="card-title grey-text text-darken-3"><%= travel_plan.destination %></span>
        <p><strong>Departure: </strong><%= travel_plan.departure_date %></p>
        <p><strong>Return: </strong><%= travel_plan.return_date %></p>
        <p><strong>Travellers: </strong><%= travel_plan.travellers %></p>
        <p><strong>Status: </strong><%= travel_plan.status %></p>
      </div>
      <div class="card-action">
        <%= (can? :read, travel_plan) ? (link_to 'Show', :action => 'show', :user_id => @user.id, :id => travel_plan.id) : '---' %>
        <% unless current_user.admin? %>
          <%= link_to 'Edit', :action => 'edit', :user_id => @user.id, :id => travel_plan.id  %>
          <%= link_to 'Destroy', :action => 'delete', :user_id => @user.id, :id => travel_plan.id %>
        <% end %>
      </div>
    </div>
  </div>
  <% end %>
</div>