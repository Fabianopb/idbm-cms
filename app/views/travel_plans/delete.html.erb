<div class="top-buttons">
	<%= link_to raw("<button type='button' class='btn btn-primary'><span class='glyphicon glyphicon-arrow-left' aria-hidden='true'></span> Back</button>"), {:action => 'index'} %>
</div>

<h3>Delete Travel Plan</h3>

<%= form_for :travel_plan, :url => {:action => 'destroy', :id => @travel_plan.id} do |f| %>

    <p>Are you sure you want to permanently delete this travel plan? This action cannot be undone!</p>

    <p class="reference-name">Travel plan created at: <%= @travel_plan.created_at %>; Destination: <%= @travel_plan.destination %></p>

    <div class="form-buttons confirm-buttons">
      <%= f.button "<span class='glyphicon glyphicon-remove' aria-hidden='true'></span> Delete".html_safe, :class => 'btn btn-danger' %>
    </div>

  <% end %>