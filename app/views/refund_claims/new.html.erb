<h1>New Refund Claim</h1>

<%= link_to 'Back to claims', {:action => 'index', :user_id => @user.id} %>

<%= form_for :refund_claim, :url => {:action => 'create', :user_id => @user.id} do |f| %>

    <%= render :partial => "form", :locals => {:f => f} %>

    <div class="form-buttons">
      <%= submit_tag "Create Refund Claim" %>
    </div>

<% end %>