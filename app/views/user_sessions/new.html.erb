<%= form_for @user_session do |f| %>

<h3>Log in</h3>

<div class="row">
  <div class="col-sm-4 form-group">
    <%= f.text_field :username, class: 'form-control', placeholder: :username %>
  </div>
</div>

<div class="row">
  <div class="col-sm-4 form-group">  
    <%= f.password_field :password, class: 'form-control', placeholder: :password %>
  </div>
</div>

<div class="form-buttons confirm-buttons">
  <%= f.button "<span class='glyphicon glyphicon-ok' aria-hidden='true'></span> Log in".html_safe, :class => 'btn btn-success' %>
</div>

<div class="row">
  <div class="col-sm-4 forgot-pass">  
    <%= link_to '>> Forgot your password?', new_password_reset_path %>
  </div>
</div>

<% end %>