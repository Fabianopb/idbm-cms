<p>Use only local times</p>

<div class="row">
  <div class="col-md-6 form-group">
    <%= f.label :destination, "Country of arrival" %>
    <%= f.text_field :destination, :class => 'form-control' %>
  </div>
</div>

<div class="form-group">
  <%= f.label :arrival %>
  <div class="form-inline">
    <%= f.datetime_select :arrival, {:order => [:day, :month, :year], :default => nil}, :class => 'form-control' %>
  </div>
</div>

<%= f.hidden_field :refund_claim_id, value: @refund_claim.id %>
<%= f.hidden_field :user_id, value: @user.id %>